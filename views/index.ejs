<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Applicant Form</title>
</head>
<body>
    <div class="container">
        <h1>Applicant Form</h1>
        <form action="/" method="post" class="my-4 form-inline">
            <div class="form-group">
                <label>Full Name</label>
                <input required type="string" name="fullName" id="fullName" placeholder="Full Name"
                class="form-control col mr-2 my-2">
                <label>Email</label>
                <input type="email" name="email" id="email" placeholder="Valid Email"
                class="form-control col mr-2 my-2">
                <label>Address</label>
                <input type="string" name="address" id="address" placeholder="Address"
                class="form-control col mr-2 my-2">
                <label>Phone Number</label>
                <input type="number" name="phoneNumber" id="phoneNumber" placeholder="Phone Number"
                class="form-control col mr-2 my-2">
                <label>Last Job Position</label>
                <input type="string" name="lastJobPosition" id="lastJobPosition" placeholder="Last Job Position"
                class="form-control col mr-2 my-2">
                <label>Last Job Company</label>
                <input type="string" name="lastJobCompany" id="lastJobCompany" placeholder="Last Job Company"
                class="form-control col mr-2 my-2">
                <label>Last Job Description</label>
                <input type="string" name="lastJobDescription" id="lastJobDescription" placeholder="Last Job Description"
                class="form-control col mr-2 my-2">
                <label>Years Of Experiences</label>
                <input type="number" name="yearsOfExperiences" id="yearsOfExperiences" placeholder="Years Of Experiences"
                class="form-control col mr-2 my-2">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
        <table class="table table-striped table-hover table-responsive">
            <caption>List of Applicant</caption>
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>address</th>
                    <th>Phone Number</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(data=> { %>
                    <tr>
                        <td><%= data.fullName %></a></td>
                        <td><%= data.email %></a></td>
                        <td><%= data.address %></a></td>
                        <td><%= data.phoneNumber %></a></td>
                        <td>
                            <a href="/delete/<%= data._id %>" class="btn btn-danger">Delete</a>
                            <a href="/<%= data._id %>" class="btn btn-info">Detail / Edit</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>